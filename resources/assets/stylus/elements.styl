.header__notify
.header__notify-mobile
  flex-grow: 1
  max-width: 340px
  ul
    list-style: none
    margin: 0
    padding: 0
    li
      display: inline-block
      color: #fff
      margin: 0 5px
      &:first-child
        margin-left: 0
      a
        color: #fff
        font-size: 12px
        text-align: center
        transition: all .3s
        &:hover
          text-decoration: none
          color: #e9e9e9
          transition: all .3s
        span
          line-height: 11px
      svg
        font-size: 18px
        margin-bottom: 3px

.header__notify-mobile
  display: none
  max-width: max-content

.main__content
  .tab-content > .active
    display: flex

.main__header
  height: 58px
  .container
  .fl_row_sb
    height: 100%
  .breadcrumb
    padding: 0
    margin: 0
    background-color: $mainHeader
    height: 100%
    li
      font-size: 34px
      line-height: 25px
      a
        color: $titleText
        display: inline-block
      &.active
        color: $titleText
        font-weight: bold
        position: relative
        margin-left: 13px
        span
          margin-left: 12px
  .breadcrumb > li + li:before
    display: inline-block
    height: 36px
    width: 2px
    padding: 0
    background-color: $titleText
    content: ''
    position: absolute;
    top: -2px;

.main__menu
  width: 19%
  background-color: $mainHeader
  transition: $tr
  ul
    list-style: none
    padding: 0
    margin: 0
    background-color: #fff
    li
      height: 48px
      border-bottom: 1px solid $borderGrey
      &.active
        background-color: #23b4d6
        a
          color: #fff
          &:hover
          &:focus
            background-color: transparent
      a
        color: $textGrey
        font-size: 12px
        display: inline-block
        line-height: 48px
        padding: 0 15px
        width: 100%
        transition: $tr
        &:hover
        &:focus
          background-color: $mainHeader
          transition: $tr
        svg
          font-size: 18px
        span
          margin-left: 16px
  &.open
    left: 0
    transition: $tr

.main__info
  width: 81%
  min-height: calc(100vh - 101px)
  padding: 0 15px
  background-color: #fff

.main__info-title
  height: 80px
  border-bottom: 2px solid $borderGrey
  padding-bottom: 15px
  .hamburger
    display: none
  .title
    font-size: 36px
    display: inline-block
    line-height: 26px
    color: $titleText
    padding-left: 15px
  input
    width: 300px
    height: 30px
    border-radius: 14px
    border: 1px solid #cccccc
    padding-left: 34px
    outline: 0
    transition: $tr
    &:focus
      border-color: #454545
      transition: $tr
    &::-webkit-input-placeholder
      color: #cccccc
    &::-moz-placeholder
      color: #cccccc
    &:-ms-input-placeholder
      color: #cccccc
    &:-moz-placeholder
      color: #cccccc
  svg
    color: #cccccc
    position: absolute
    left: 8px
    top: 9px

.main__tabs
  a
    height: 58px
    color: $titleText
    font-size: 16px
  .nav > li > a
    width: 100%
    transition: $tr
  .nav-tabs
    border: none
  .nav-tabs > li
    margin-bottom: 0
    width: 220px
    text-align: center
  .nav-tabs > li > a
    border: none
    line-height: 38px
    margin-right: 0
    border-radius: 0
  .nav > li > a:hover
  .nav > li > a:focus
    background-color: #999
    color: #fff
    transition: $tr
  .nav-tabs > li.active > a
  .nav-tabs > li.active > a:hover
  .nav-tabs > li.active > a:focus
    color: $titleText
    border: none
    background-color: #fff

.main__list
  margin: 15px 0
  border: 1px solid #cbcbcb
  border-top: none
  box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.5);

.main__list-item
  &.panel
    margin: 0
    border: none
    border-radius: 0
  &.open
    .main__list-head
      background-color: #ecf6e7
      transition: $tr
      border-top-color: #fff

.main__list-item-content
  min-height: 252px

.main__item-title-text
  display: inline-block
  height: 100%
  font-size: 16px
  color: #fff
  line-height: 13px
  padding-left: 16px
  flex-grow: 1

.main__item-title-count
  width: 140px
  height: 100%
  font-size: 16px
  color: #fff
  line-height: 13px
  background-color: #999
  margin-left: 1px

.main__list-head
  height: 60px
  background-color: #f9f9f9
  border-top: 1px dashed #ccc
  transition: $tr
  &:hover
    background-color: #ecf6e7
    transition: $tr
  a
    display: inline-block
    line-height: 13px
    font-size: 16px
    color: $textGrey
    padding: 18px
    padding-left: 30px
    flex-grow: 1

.main__item-icon
  height: 100%
  width: 30px
  justify-content: center
  background-color: #e6e6e6
  color: $textGrey

.main__list-item-body
  padding: 0 30px
  padding-top: 30px
  margin-bottom: 3px
  border: 1px solid #cbcbcb
  border-bottom: none
  box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.5) inset

.main__list-item-details
  height: 18px
  width: 100%
  font-size: 12px
  position: absolute
  top: 1px
  left: 0
  border: 1px solid #8a8a8a
  border-bottom: none
  box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.5) inset
  background-color: #ccc
  color: $textGrey
  padding-left: 7px
  svg
    position: absolute
    top: 5px
    left: 27px
    font-size: 26px
    color: #ccc

.main__list-rule
  width: 167px
  height: 252px
  margin-bottom: 15px
  margin-right: 15px
  border: 1px solid #c6c6c6
  border-top-color: #ececec
  border-radius: 6px
  box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.5)

.main__list-rule-body
  max-height: 120px
  overflow: hidden
  padding: 0 10px

.main__list-rule-block
  width: 82px
  height: 82px
  transition: $tr
  cursor: pointer
  svg
    font-size: 36px
  &:hover
  &:focus
    background-color: #ecf6e7
    transition: $tr

.main__list-rule-plus
  width: 24px
  height: 24px
  background-color: #fff
  position: absolute
  top: calc(50% - 12px)
  left: calc(50% - 12px)
  border-radius: 50%
  transition: $tr
  cursor: pointer
  svg
    font-size: 16px
  &:hover
  &:focus
    background-color: #ecf6e7
    transition: $tr

.main__list-rule-footer
  padding: 0 10px
  margin-bottom: 8px
  svg
    font-size: 20px
    color: $textGrey
    transition: $tr
    &:hover
    &:focus
      color: $titleText
      transition: $tr

.main__list-add-rules
  margin-bottom: 15px
  height: 252px
  div
    width: 164px
    height: 120px
    border: 2px dashed #727272
    border-radius: 3px
    color: $textGrey
    font-size: 16px
    padding: 15px
    transition: $tr
    cursor: pointer
    &:hover
    &:focus
      background-color: #ecf6e7
      transition: $tr
    span
      margin-top: 4px
    svg
      font-size: 22px

.main__item-count
  span
    color: #333
    margin-right: 16px
  svg
    color: $textGrey
    margin-right: 29px

