html
  height: 100%

body
  min-height: 100%
  background-color: $mainHeader
  position: relative

.header
  background-color: $headerBg
  height: 43px
  .container
    height: 100%
    .row
      height: 100%
      & > div
        height: 100%
  .title span
    color: #fff
    font-size: 23px
    line-height: 23px

.main
  background-color: $mainHeader

.rule-checkbox
  cursor: pointer
  width: 28px
  height: 20px
  margin: 0
  span
    content: ""
    display: inline-block
    position: relative
    width: 100%
    height: 100%
    background-color: #a2d28a
    border-radius: 8px
    -webkit-transition: background .3s ease
    transition: background .3s ease
    vertical-align: middle
    &:after
      content: ""
      position: absolute
      display: inline-block
      width: 14px
      height: 14px
      background-color: #fff
      border-radius: 50%
      left: 3px
      top: 3px
      transition: left .3s ease,background .3s ease,box-shadow .1s ease
  input[type=checkbox]
    opacity: 0
    width: 0
    height: 0
    position: absolute
  input[type=checkbox]:checked+span
      background-color: $textGrey
  input[type=checkbox]:checked+span:after
    left: 11px

.loader
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  background-color: #fff
  opacity: 1
  &.loaded
    opacity: 0
    transition: $tr

